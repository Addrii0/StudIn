<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingStart="8dp"
    android:paddingEnd="16dp">

    <ImageView
        android:id="@+id/imageView_avatar_received"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/icono_persona"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/textView_message_body_received"
        android:layout_marginEnd="8dp"/>

        <TextView
        android:id="@+id/textView_message_body_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="280dp"
        android:background="@drawable/background_message_received"
        android:padding="12dp"
        android:textColor="@android:color/black"
        tools:text="Este es un mensaje de ejemplo recibido del otro contacto."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap" />

        <TextView
        android:id="@+id/textView_message_timestamp_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        tools:text="10:31 AM"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/textView_message_body_received"
        app:layout_constraintStart_toStartOf="@id/textView_message_body_received" />

    </androidx.constraintlayout.widget.ConstraintLayout>