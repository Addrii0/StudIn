<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingStart="16dp"
    android:paddingEnd="8dp">

    <TextView
    android:id="@+id/textView_message_body_sent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="280dp"
    android:background="@drawable/background_message_sent"
    android:padding="12dp"
    android:textColor="@android:color/white"
    tools:text=" Mensaje de ejemplo "
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintWidth_default="wrap"/>

    <TextView
        android:id="@+id/textView_message_timestamp_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        tools:text="10:30 AM"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/textView_message_body_sent"
        app:layout_constraintEnd_toEndOf="@id/textView_message_body_sent"/>

</androidx.constraintlayout.widget.ConstraintLayout>